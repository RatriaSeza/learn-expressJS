<div class="container mt-3">
	<div class="row">
		<div class="col-md-8">
			<h2>Contacts List</h2>

			<table class="table table-striped table-dark">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Phone Number</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					<% contacts.forEach((contact, i) => { %>
					<tr>
						<th scope="row"><%= i+1 %></th>
						<td><%= contact.name %></td>
						<td><%= contact.phoneNumber %></td>
						<td>
							<a href="/contact/<%= contact.id %>" class="btn btn-success btn-sm"><i class="bi bi-info-circle"></i> Detail</a>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>
